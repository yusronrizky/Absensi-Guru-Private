<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/foto_profil"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:src="#D3D3D3"
            android:layout_margin="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_guru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Guru"
            app:layout_constraintStart_toStartOf="@id/foto_profil"
            app:layout_constraintEnd_toEndOf="@id/foto_profil"
            app:layout_constraintTop_toBottomOf="@id/foto_profil"/>

        <TextView
            android:id="@+id/nama_guru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:layout_margin="7dp"
            app:layout_constraintStart_toEndOf="@id/foto_profil"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/alamat_guru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:layout_margin="7dp"
            app:layout_constraintTop_toBottomOf="@id/nama_guru"
            app:layout_constraintStart_toEndOf="@id/foto_profil"/>

        <TextView
            android:id="@+id/jenis_kelamin_guru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:layout_margin="7dp"
            app:layout_constraintTop_toBottomOf="@id/alamat_guru"
            app:layout_constraintStart_toEndOf="@id/foto_profil"/>

        <TextView
            android:id="@+id/telp_guru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Telp"
            android:layout_margin="7dp"
            app:layout_constraintTop_toBottomOf="@id/jenis_kelamin_guru"
            app:layout_constraintStart_toEndOf="@id/foto_profil" />

        <TextView
            android:id="@+id/username_guru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_margin="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/password_guru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:paddingEnd="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/telp_guru"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>